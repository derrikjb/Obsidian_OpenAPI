# ========================================
# Obsidian OpenAPI Server Configuration
# ========================================

# Server Configuration
OBSIDIAN_OPENAPI_PORT=27150
OBSIDIAN_OPENAPI_HOST=0.0.0.0

# Obsidian REST API Configuration
OBSIDIAN_API_URL=http://127.0.0.1:27123
OBSIDIAN_API_KEY=your-obsidian-api-key-here

# Server API Authentication (auto-generated on first run if not set)
# Leave blank to auto-generate a secure key
SERVER_API_KEY=

# CORS Configuration (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Debug Mode (true/false)
DEBUG=false

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Write Operation History (set to 0 to disable)
MAX_HISTORY_ENTRIES=10

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Enable API Key Regeneration Endpoint (true/false)
# WARNING: Setting to true allows anyone with the current key to regenerate it
ENABLE_KEY_REGENERATION=false